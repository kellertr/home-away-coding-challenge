<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandingTextColor" parent = "TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/collapsing_toolbar_text_size</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadingText">
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HyperLinkText">
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textColor">@color/blue</item>
    </style>



</resources>
